        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="無輸出卡"
        android:textSize="15sp" />


    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="無輸出卡"
        android:textSize="15sp" />




</TableRow>

<TableRow>
    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="方位編號"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_output_board_0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
       
        android:editable="false"
        android:text="0"
        android:hint="@string/_0_7"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/edit_output_board_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
       
