<RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_alignParentRight="true"
        android:text="@string/OK" />
</RelativeLayout>







    </TableLayout>




</android.support.constraint.ConstraintLayout>
