                android:inputType="number"
                android:maxLength="5" />
        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/view_remote1_IP_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/remote1_ip_group"
