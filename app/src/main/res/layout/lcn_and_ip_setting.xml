                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/netmask_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

            <TextView
                android:id="@+id/netmask_3_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/netmask_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view_netmask_IP_line"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/netmask_ip_group"
        android:background="#000000" />

    <TableLayout
        android:id="@+id/gateway_ip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/netmask_ip_group"
        android:orientation="horizontal">

        <TableRow>

            <TextView
                android:id="@+id/gateway_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="預設閘道:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/gateway_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

            <TextView
                android:id="@+id/gateway_1_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/gateway_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

            <TextView
