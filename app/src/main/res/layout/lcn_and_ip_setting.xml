                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/gateway_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view_gateway_IP_line"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/gateway_ip_group"
        android:background="#000000" />

    <TableLayout
        android:id="@+id/remote0_ip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote1_ip_group"
        android:orientation="horizontal">

        <TableRow>

            <TextView
                android:id="@+id/remote0_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="目標IP2:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/remote0_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"


                android:maxLength="3" />

            <TextView
                android:id="@+id/remote0_1_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/remote0_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

            <TextView
                android:id="@+id/remote0_2_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/remote0_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

            <TextView
                android:id="@+id/remote0_3_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="." />

            <EditText
                android:id="@+id/remote0_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:inputType="number"

                android:maxLength="3" />

            <TextView
                android:id="@+id/remote0_4_colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

